mixin videoPlayer(video = {})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.fileUrl}`) 
    .videoPlayer__controls 
      .videoPlayer__column 
        span#jsPlayBtn 
          i.fas.fa-play
        span 
          i.fas.fa-volume-up
      .videoPlayer__column 
        span 00:00 / 10:00
        .time 
          .time__current
          .time__scrubber-container 
            .time__scrubber
      .videoPlayer__column 
        span 
          i.fas.fa-expand