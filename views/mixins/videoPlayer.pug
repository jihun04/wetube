mixin videoPlayer(video = {})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.fileUrl}`) 
    .videoPlayer__controls 
      .videoPlayer__column 
        span#jsPlayBtn 
          i.fas.fa-play
        span#jsVolumeBtn
          i.fas.fa-volume-down
        input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.05", value="0.5")
      .videoPlayer__column 
        span
          span#jsCurrentTime 00:00
          span /
          span#jsTotalTime 00:00
        .progress 
          progress#progress(value="0", min="0")
            span#progressBar
      .videoPlayer__column 
        span#jsFullScrnBtn
          i.fas.fa-expand