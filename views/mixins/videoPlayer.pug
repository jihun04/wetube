mixin videoPlayer(video = {})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.fileUrl}`) 
    .videoPlayer__controls 
      .videoPlayer__column 
        span#jsPlayBtn 
          i.fas.fa-play
        span#jsVolumeBtn
          i.fas.fa-volume-up
      .videoPlayer__column 
        span
          span#jsCurrentTime 00:00
          span /
          span#jsTotalTime 
        .time-bar 
          .time-bar__current
          .time-bar__scrubber-container 
            .time-bar__scrubber
      .videoPlayer__column 
        span#jsFullScrnBtn
          i.fas.fa-expand