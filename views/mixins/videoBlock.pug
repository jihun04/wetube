mixin videoBlock(video = {})
    .videoBlock
        a(href=routes.videoDetail(video.id))
            video.videoBlock__thumbnail(src=video.videoFile, controls=false)
        .videoBlock__info 
            if video.creator
                a(href=routes.userDetail(video.creator.id))
                    if video.creator.avatarUrl.substring(0,4) === "http"
                        .videoBlock__u-avatar(style=`background-image: url('${video.creator.avatarUrl}');`)
                    else                         
                        .videoBlock__u-avatar(style=`background-image: url('/${video.creator.avatarUrl}');`)
            a(href=routes.videoDetail(video.id))
                h4.videoBlock__title=video.title
                if video.views === 1
                    h6.videoBlock__views 1 view
                else
                    h6.videoBlock__views #{video.views} views