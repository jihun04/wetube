extends layouts/main

block content
    .form-container.form-container--profile
        form.fileUpload(enctype="multipart/form-data")
            .avatarUpload
                .upload-header
                    span Profile picture
                .u-avatar-box 
                    if loggedUser.avatarUrl
                        if loggedUser.avatarUrl.substring(0,4) === "http"
                            .u-avatar-img(style=`background-image: url('${loggedUser.avatarUrl}');`)
                        else
                            .u-avatar-img(style=`background-image: url('/${loggedUser.avatarUrl}');`)
                    else
                        .u-avatar-img
                    input(type="file", name="avatar", accept="image/*")
                    .appearIcon 
                        i.fas.fa-camera
            .bannerUpload 
                .upload-header
                    span Banner image
                .u-banner-box
                    .wrap-u-banner-img
                        if loggedUser.bannerUrl
                            if loggedUser.bannerUrl.substring(0,4) === "http"
                                .u-banner-img(style=`background-image: url('${loggedUser.bannerUrl}');`)
                            else
                                .u-banner-img(style=`background-image: url('/${loggedUser.bannerUrl}');`)
                        else 
                            .u-banner-img
                    input(type="file", name="banner", accept="image/*")
                    .appearIcon 
                        i.fas.fa-camera
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            span.placeholder Username
            input(type="text", name="name", value=loggedUser.name)
            span.placeholder Email
            input(type="email", name="email", value=loggedUser.email)
            input(type="submit", value="Update Profile")